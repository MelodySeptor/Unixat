html
    include ./head.pug
    include ./header.pug

    body
        include ./banner.pug

        h3(class="header center green-text") Registrarse

        div(class="container")
            div(clas="section")
                div(class="row")
                    form(class="col s12" method="post" action="/peticionRegistro")
                        div(class="row")
                            div(class="input-field col s6")
                                i(class="material-icons prefix green-text") account_circle
                                input(id="nombreRegistro" name="nombreRegistro" type="text" class="validate" required="required")
                                label(for="nombreRegistro") Nombre
                            if errorName
                                div(class="input-field col s6")
                                    i(class="material-icons prefix red-text") error_outline
                                    label
                                        p(class="red-text") Ingrese un nombre válido.

                        div(class="row")
                            div(class="input-field col s12")
                                i(class="material-icons prefix green-text") email
                                input(id="emailRegistro" name="emailRegistro" type="email" class="validate" required="required")
                                label(for="emailRegistro") Email
                            if errorEmail
                                div(class="input-field col s6")
                                    i(class="material-icons prefix red-text") error_outline
                                    label
                                        p(class="red-text") Dirección de correo electrónica inválida.

                        div(class="row")
                            div(class="input-field col s6")
                                i(class="material-icons prefix green-text") lock
                                input(id="passwordRegistro" name ="passwordRegistro" type="password" class="validate" required="required")
                                label(for="passwordRegistro") Contraseña

                            div(class="input-field col s6")
                                input(id="passwordRepetirRegistro" name ="passwordRepetirRegistro" type="password" class="validate" required="required")
                                label(for="passwordRepetirRegistro") Repite la contraseña
                            if errorPassword
                                div(class="input-field col s6")
                                        i(class="material-icons prefix red-text") error_outline
                                        label
                                            p(class="red-text") Contraseña inválida.
                        
                        div(class="row")
                            div(class="input-field col s12")
                                label
                                    input(class="with-gap green-text" name="group1" type="radio" required="required") 
                                    span Acepto los términos, condiciones y el uso de cookies.

                        div(class="row")
                            div(class="input-field col s6")
                                i(class="material-icons prefix green-text") error_outline
                                label
                                    a(href="/identificarse") Ya estoy registrado
                            div(class="input-field col s6")
                                button(class="waves-effect waves-light btn green accent-4" type="submit" name="action") Registrar
                                    i(class="material-icons right") chevron_right

    include ./footer.pug
    include ./scriptsCss.pug