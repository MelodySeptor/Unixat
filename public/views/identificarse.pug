html
    include ./head.pug
    include ./header.pug

    body
        div(id="index-banner" class="parallax-container valign-wrapper")
            div(class="section no-pad-bot")
                div(class="container")
                    h1(class="header center white-text text-white-2") Unichat
                    div(class="row center")
                        h5(class="header col s12 light") Frase molona
            div(class="parallax")
                img(src="images/Banner11.png" alt="Unsplashed background img 1")

        h3(class="header center green-text") Identificarse
        br
        br

        div(class="container")
            div(clas="section")
                div(class="row")
                    form(class="col s12" method="post" action="/peticionLogin")
                        div(class="row")
                            div(class="input-field col s6")
                                i(class="material-icons prefix green-text") account_circle
                                input(id="usernameAcceder" type="text" class="validate" required="required")
                                label(for="usernameAcceder") Usuario

                            div(class="input-field col s6")
                                i(class="material-icons prefix green-text") lock
                                input(id="passwordAcceder" type="password" class="validate" required="required")
                                label(for="passwordAcceder") Contraseña

                        div(class="row")
                            div(class="input-field col s6")
                                i(class="material-icons prefix green-text") error_outline
                                label
                                    a(href="/recuperarPass") He olvidado la contraseña
                            div(class="input-field col s6")
                                button(class="waves-effect waves-light btn green accent-4" type="submit" name="action") Acceder
                                    i(class="material-icons right") chevron_right

    include ./footer.pug
    include ./scriptsCss.pug